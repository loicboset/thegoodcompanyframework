<div class="container">

  <%# CREATE A NEW PROJECT %>
  <%= link_to "Add a project idea", new_project_path, class: "button add-project" %>

  <%# DISPLAY PROJECT CARDS %>
  <div class="project_cards__container">

    <% @projects.each do |project| %>
      <%= link_to project_path(project), class: "project_card" do %>
        <p><%= project.name %></p>
      <% end %>
    <% end %>


  </div>


</div>
